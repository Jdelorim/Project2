<div class="container">
<div id="registration-form">
  <div class="container">
    <div class="row">
      <form>
      <div class="form-group">
        <label for="fname-text">First Name</label>
        <input type="text" class="form-control" id="fname-text" aria-describedby="fname-text" placeholder="Enter your First Name">
        <br>
     </div>
     <div class="form-group">
        <label for="lname-text">Last Name</label>
        <input type="text" class="form-control" id="lname-text" aria-describedby="lname-text" placeholder="Enter your Last Name">
        <br>
     </div>
     <div class="form-group">
        <label for="email-text">Email</label>
        <input type="text" class="form-control" id="email-text" aria-describedby="email-text" placeholder="Enter your Email">
        <br>
     </div>     
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Password">
      </div>
      <div class="form-group">
        <label for="reEnterPassword">Re-Enter Password</label>
        <input type="reEnterPassword" class="form-control" id="reEnterPassword" placeholder="Re-Enter Password">
      </div>
       <div class="form-group">
        <label for="address-text"> Address</label>
        <input type="text" class="form-control" id="address-text" aria-describedby="address-text" placeholder="Enter your address">
        <br>
     </div>
       <div class="form-group">
        <label for="storeName-text">Store Name</label>
        <input type="text" class="form-control" id="storeName-text" aria-describedby="storeName-text" placeholder="Enter your Store Name">
        <br>
     </div>
       <div class="form-group">
        <label for="description-text">Description</label>
        <input type="text" class="form-control" id="description-text" aria-describedby="description-text" placeholder="Enter your description">
        <br>
     </div>
      <div class="form-group">
        <label for="price-number">Price</label>
        <input type="text" class="form-control" id="price-number" aria-describedby="price-number" placeholder="Enter your service price">
        <br>
     </div>
    {{!-- <div class="form-group">
        <label for="store-img">Upload your Image</label>
        <input type="file" class="form-control-file" id="store-img">
     </div> --}}
     <br>
        <button id="submit-register" class="btn btn-primary float-right">Submit</button>
    </div>
    </form> 
  </div>
</div>

</div>